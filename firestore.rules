
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can create their own profile with a 'user' role and 'pending' status.
      // This prevents them from creating themselves as an admin.
      allow create: if isOwner(userId) && 
                      request.resource.data.role == 'user' &&
                      request.resource.data.status == 'pending';

      // Users can read their own profile. Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // A user can update their own profile, but they CANNOT change their role.
      // This allows them to activate their account (pending -> active) or change their name,
      // while preventing privilege escalation. Admins can update anything.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
                      
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    // Cities are publicly readable. Only admins can modify them.
    match /cities/{cityId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Hotels are publicly readable. Only admins can modify them.
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hotels/{hotelId}/rooms/{roomId} {
        allow read: if true;
        allow write: if isAdmin();
        // Allow authenticated users to update the room count, but ONLY to decrement it by 1.
        // This is necessary for the booking transaction to succeed for non-admin users.
        // The transaction ensures this only happens when a booking is also created.
        allow update: if request.auth != null &&
                      request.resource.data.availableRooms == resource.data.availableRooms - 1 &&
                      // Verify that availableRooms is the ONLY field being changed.
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['availableRooms']);
    }

    // Users can create, read, update, and delete their own bookings.
    // Admins can read any booking for management purposes.
    match /users/{userId}/bookings/{bookingId} {
      // User can create their own booking.
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      
      // User can read (get/list) their own bookings. Admins can read any.
      allow read: if isOwner(userId) || isAdmin();
      
      // User can update/delete their own bookings. The resource check adds extra security.
      allow update, delete: if isOwner(userId) && resource.data.userId == request.auth.uid;
    }
    
    // Collection group query for admin booking list.
    // Use `list` to cover the collection group query.
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }
    
    // OTP verification documents can only be accessed by their owner.
    match /otp_verification/{userId} {
      allow read, create, delete: if isOwner(userId);
      // OTPs are single-use and should not be updated.
      allow update: if false;
    }
  }
}
