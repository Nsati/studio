rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPERS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // MASTER ADMIN BYPASS: Purely token-based (Synchronous)
    // Required for collectionGroup queries to be authorized instantly.
    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // General Admin check (Asynchronous - for standard collections)
    function isAdmin() {
      return isMasterAdmin() || (isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // --- COLLECTION GROUP RULES ---
    // REQUIRED: Top-level match for global queries
    match /{path=**}/bookings/{bookingId} {
      // Master Admin can see everything globally
      allow read, write: if isMasterAdmin();
      
      // Standard users can only read their own bookings
      // NOTE: Queries MUST include: where("userId", "==", user.uid)
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isMasterAdmin() || isAdmin();
      allow list: if isMasterAdmin() || isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId || isMasterAdmin() || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin() || isAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        // Allow update for inventory management during booking transactions
        allow update: if isAuthenticated(); 
        allow write: if isMasterAdmin() || isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    
    // Global catch-all for Master Admin safety
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}