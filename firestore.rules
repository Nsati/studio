rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL MASTER BYPASS (100% SYNCHRONOUS) ---
    // Zero database lookups for maximum speed and collectionGroup compatibility.
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. UNIVERSAL COLLECTION GROUP BYPASS (GOD MODE) ---
    // This MUST stay at the top-level to authorize global queries immediately.
    match /{path=**}/bookings/{bookingId} {
      allow read, write: if isMasterAdmin();
      
      // Secondary safety for authenticated users (their own bookings)
      allow list: if request.auth != null && request.query.limit <= 100;
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- 3. STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if isMasterAdmin() || request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write: if isMasterAdmin() || request.auth.uid == userId;
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if request.auth != null; 
        allow write: if isMasterAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isMasterAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin(); }
    
    // Final catch-all safety for superuser
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}