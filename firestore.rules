rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL MASTER HELPERS (100% SYNCHRONOUS) ---
    // Token-based checks are instant and cost-free. Essential for collectionGroup queries.
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.token.email in ['mistrikumar42@gmail.com', 'nsati09@gmail.com'] ||
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. UNIVERSAL MASTER BYPASS (GOD MODE) ---
    // This MUST be the first rule to ensure synchronous authorization for global queries.
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- 3. STANDARD COLLECTION RULES (For Regular Users) ---

    // Bookings Protection
    match /{path=**}/bookings/{bookingId} {
      allow list: if request.auth != null && request.query.limit <= 100;
      allow get: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if request.auth != null; 
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    match /cities/{cityId} { allow read: if true; }
    match /tourPackages/{packageId} { allow read: if true; }
    match /promotions/{promoId} { allow read: if true; }
  }
}