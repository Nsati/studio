rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL MASTER HELPERS (100% SYNCHRONOUS) ---
    // Token-based checks are instant and cost-free. Required for collectionGroup queries.
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.token.email in ['mistrikumar42@gmail.com', 'nsati09@gmail.com'] ||
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. UNIVERSAL COLLECTION GROUP BYPASS (GOD MODE) ---
    // This allows collectionGroup queries like 'bookings' to work without filtering.
    // Must be placed before more specific matches.
    match /{path=**}/bookings/{bookingId} {
      allow read, write: if isMasterAdmin();
      
      // Regular user rules
      allow list: if request.auth != null && request.query.limit <= 100;
      allow get: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- 3. STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if isMasterAdmin() || request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write: if isMasterAdmin() || request.auth.uid == userId;
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if request.auth != null; 
        allow write: if isMasterAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isMasterAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin(); }
    
    // Final catch-all for god-mode
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}