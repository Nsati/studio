
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This get() is allowed by the "allow get" rule in the /users/{userId} match below.
      // That rule is non-recursive, which is critical for this function to work.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
      allow update: if isAdmin();

      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId || isAdmin();
        
        // A user can create their own booking, but it must be in a PENDING state.
        // This is required for the client-side pre-payment step.
        allow create: if request.auth.uid == userId && request.resource.data.status == 'PENDING';
        
        // Users can no longer update bookings directly (confirm/cancel).
        // This must be done via server actions or webhooks using the Admin SDK.
        // Admins can still update bookings.
        allow update, delete: if isAdmin();
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Room documents can only be written by an Admin.
          // Inventory updates for bookings/cancellations are now handled by the
          // Admin SDK on the server, which bypasses these rules.
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /confirmedBookings/{bookingId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
    }
  }
}
