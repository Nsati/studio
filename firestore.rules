
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and allow anyone to read and write to
    // your database. This is configured for an authentication-free admin panel
    // as per user request.
    // For a production app, you MUST implement proper security rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
