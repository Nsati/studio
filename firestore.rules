
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role from the user's profile
    function isAdmin() {
      // Use exists() to prevent errors on non-existent user profile documents
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read and update their own profile. Admins can read/update any.
    // Any authenticated user can create their own profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
    }

    // Bookings can be created, read, updated, and deleted by the user who owns them.
    // Admins can also do anything.
    match /users/{userId}/bookings/{bookingId} {
      allow read, update, create, delete: if request.auth.uid == userId || isAdmin();
    }
    
    // Hotels, Rooms, Cities, Tour Packages, Promotions, and Reviews should be publicly readable.
    // Write operations should be restricted to admins.
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hotels/{hotelId}/rooms/{roomId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /hotels/{hotelId}/reviews/{reviewId} {
      allow read: if true;
      // Allow any authenticated user to create a review.
      allow create: if request.auth != null;
      // Allow user to edit/delete their own review, or admin to do so.
      // This assumes the review document has a 'userId' field.
      allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
