rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. MASTER ADMIN BYPASS: Direct token check (Zero-latency, no get() calls)
    // Critical for collectionGroup queries to avoid auth recursion limits.
    function isMasterAdmin() {
      return request.auth != null && request.auth.token.email == 'mistrikumar42@gmail.com';
    }

    // 2. REGULAR ADMIN CHECK: Document-based role check
    function isAdmin() {
      return isMasterAdmin() || (
        request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- COLLECTION GROUP RULES (MUST BE TOP LEVEL) ---
    // Specifically for collectionGroup('bookings') queries used in Admin Dashboard
    match /{path=**}/bookings/{bookingId} {
        // Master admin can list/read everything. Users can only see their own.
        allow read, list: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    // --- USER DATA & PROFILES ---
    match /users/{userId} {
      allow read, write: if isMasterAdmin() || (isAuthenticated() && request.auth.uid == userId);
      allow list: if isAdmin();
      
      match /{allSubcollections=**} {
        // Safe-guard: Owners always have access to their own sub-collections
        allow read, write: if isMasterAdmin() || (isAuthenticated() && request.auth.uid == userId);
      }
    }

    // --- HOTELS & ROOMS ---
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow update: if isAuthenticated(); // Allowed for booking transaction (inventory update)
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if isAuthenticated();
          allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
        }
    }

    // --- CONTENT COLLECTIONS ---
    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}