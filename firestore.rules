
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
      
      allow read, write: if isAdmin();

      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId;
        
        // Allow users to create bookings in either PENDING or CONFIRMED state
        allow create: if request.auth.uid == userId && 
                      (request.resource.data.status == 'PENDING' || request.resource.data.status == 'CONFIRMED');
        
        allow read, write: if isAdmin();
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Allow users to update room inventory during a booking transaction
          allow update: if request.auth != null;
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
