
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can list all users and get any individual user document.
      allow list, get: if isAdmin();
      // A user can get or update their own document.
      allow get, update: if request.auth.uid == userId;
      // Any authenticated user can create their own user document.
      allow create: if request.auth.uid == userId;
    }

    match /users/{userId}/bookings/{bookingId} {
      // An admin can do anything. A user can do anything to their own booking.
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // This rule allows admins to perform collection group queries on bookings.
    match /{path=**}/bookings/{bookingId} {
      allow read: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hotels/{hotelId}/rooms/{roomId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /hotels/{hotelId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
