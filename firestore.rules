
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This get() is allowed by the "allow get" rule in the /users/{userId} match below.
      // That rule is non-recursive, which is critical for this function to work.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // CRITICAL: This rule specifically allows a user to read THEIR OWN document.
      // It does NOT call isAdmin(), which prevents rule evaluation recursion.
      // This is the rule that allows the get() call inside the isAdmin() function to succeed.
      allow get: if request.auth.uid == userId;

      // Allow admins to perform broad list/update operations.
      // Allow users to create/update their own profiles.
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role);

      match /bookings/{bookingId} {
        // User can read/write their own bookings. Admin can read/write any booking.
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    // This global rule allows admins to perform `list` operations (collection group queries)
    // across all `bookings` subcollections.
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow create, delete: if isAdmin();
          
          // Allow admins to update anything.
          // Allow any authenticated user (booking/cancelling) to update ONLY the 'availableRooms' field.
          // All other fields must remain unchanged. This is a more robust rule than using .diff().
          allow update: if isAdmin() || 
                         (request.auth != null &&
                          request.resource.data.availableRooms != resource.data.availableRooms && // The only field that IS allowed to change
                          request.resource.data.id == resource.data.id &&
                          request.resource.data.hotelId == resource.data.hotelId &&
                          request.resource.data.type == resource.data.type &&
                          request.resource.data.price == resource.data.price &&
                          request.resource.data.capacity == resource.data.capacity &&
                          request.resource.data.totalRooms == resource.data.totalRooms
                         );
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Temporary public collection for success page
    match /confirmedBookings/{bookingId} {
        allow read: if true;
        // Allow any authenticated user to create their own booking summary during checkout.
        allow create: if request.auth != null;
        allow update, delete: if false; // Prevent modification after creation
    }
  }
}
