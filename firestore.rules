/**
 * WARNING: This ruleset is simplified for a basic password-protected admin panel
 * and is NOT secure for a production environment. The write rules for public
 * collections like 'hotels' and 'cities' are open, and the list rules for 'users'
 * and 'bookings' are also open. Security relies solely on the UI-level password
 * on the admin panel, which does not protect against direct API calls.
 *
 * Use this for prototyping and local development only. For production, re-implement
 * a robust authentication check (like the original 'isAdmin()' function) to
 * secure your data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDoc();
    }

    //----------------------------------------------------------------------
    // Validation Functions (Prototyping Mode: Authorization-critical fields only)
    //----------------------------------------------------------------------

    function isUserDataValidOnCreate(userId) {
      let data = request.resource.data;
      return data.uid == userId &&
             data.displayName is string &&
             data.email is string &&
             data.role == 'user'; // All new users are 'user'
    }
    
    function isUserDataValidOnUpdate() {
      // User cannot change their own ID or role.
      return request.resource.data.uid == resource.data.uid &&
             request.resource.data.role == resource.data.role;
    }

    function isBookingDataValidOnCreate(userId) {
      return request.resource.data.userId == userId;
    }

    function isBookingDataValidOnUpdate() {
      return request.resource.data.userId == resource.data.userId;
    }

    //----------------------------------------------------------------------
    // Collection Rules
    //----------------------------------------------------------------------

    match /users/{userId} {
      // WARNING: Allows any client to list all users.
      allow list: if true;
      
      // A user can get, update, or delete their own profile.
      // The admin panel also needs get/update/delete access.
      allow get: if true;
      allow update: if true;
      allow delete: if true;

      // A user can only create their own profile.
      allow create: if isOwner(userId) && isUserDataValidOnCreate(userId);

      match /bookings/{bookingId} {
        // WARNING: Allows any client to list and read all bookings.
        allow get: if true;
        allow list: if true;

        // Only the owner of the booking can create, update, or delete it.
        allow create: if isOwner(userId) && isBookingDataValidOnCreate(userId);
        allow update: if isExistingOwner(userId) && isBookingDataValidOnUpdate();
        allow delete: if isExistingOwner(userId);
      }
    }
    
    match /cities/{cityId} {
      // Publicly readable
      allow read: if true;
      // WARNING: Publicly writable. Secured only by the admin panel password UI.
      allow write: if true;
    }

    match /hotels/{hotelId} {
      // Publicly readable
      allow read: if true;
      // WARNING: Publicly writable. Secured only by the admin panel password UI.
      allow write: if true;

      match /rooms/{roomId} {
        // Publicly readable
        allow read: if true;
        // WARNING: Publicly writable. Secured only by the admin panel password UI.
        allow write: if true;
      }
    }
  }
}
