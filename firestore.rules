
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && userDoc.data.role == 'admin';
    }

    match /users/{userId} {
      // A user can read their own profile. This also authorizes the get() in isAdmin().
      allow get: if isUser(userId);
      // A user can update their own profile.
      allow update: if isUser(userId);
       // A user can create their own profile document.
      allow create: if isUser(userId);

      // Admins can list and get any user document.
      allow list, get: if isAdmin();

      match /bookings/{bookingId} {
        // User can read/write their own bookings. Admins can read/write any booking.
        allow read, write: if isUser(userId) || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Temporary public collection for success page
    match /confirmedBookings/{bookingId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
