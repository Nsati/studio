
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDoc();
    }

    //----------------------------------------------------------------------
    // Validation Functions (Prototyping Mode: Authorization-critical fields only)
    //----------------------------------------------------------------------

    function isUserDataValidOnCreate(userId) {
      let data = request.resource.data;
      return data.uid == userId &&
             data.displayName is string &&
             data.email is string &&
             data.role == 'user'; // All new users are 'user'
    }
    
    function isUserDataValidOnUpdate() {
      // User cannot change their own ID or role.
      return request.resource.data.uid == resource.data.uid &&
             request.resource.data.role == resource.data.role;
    }

    function isBookingDataValidOnCreate(userId) {
      return request.resource.data.userId == userId;
    }

    function isBookingDataValidOnUpdate() {
      return request.resource.data.userId == resource.data.userId;
    }

    //----------------------------------------------------------------------
    // Collection Group Rules
    //----------------------------------------------------------------------

    // Rule for collection group query on 'bookings'.
    // WARNING: Publicly readable for prototyping the admin panel.
    match /{path=**}/bookings/{bookingId} {
      allow read: if true;
    }

    //----------------------------------------------------------------------
    // Collection Rules
    //----------------------------------------------------------------------

    match /users/{userId} {
      // WARNING: Allows any client to list all users for the admin panel.
      allow list: if true;
      
      // Admin panel needs get/update access. Users can manage their own profile.
      allow get: if true;
      allow update: if true;
      allow delete: if true;

      // A user can only create their own profile.
      allow create: if isOwner(userId) && isUserDataValidOnCreate(userId);

      match /bookings/{bookingId} {
        // Allow users to access their own bookings. Admin panel also needs access.
        allow get: if true;
        allow list: if true;

        // Only the owner of the booking can create, update, or delete it.
        allow create: if isOwner(userId) && isBookingDataValidOnCreate(userId);
        allow update: if isExistingOwner(userId) && isBookingDataValidOnUpdate();
        allow delete: if isExistingOwner(userId);
      }
    }
    
    match /cities/{cityId} {
      // Publicly readable.
      allow read: if true;
      // WARNING: Publicly writable for prototyping the admin panel.
      allow write: if true;
    }

    match /hotels/{hotelId} {
      // Publicly readable.
      allow read: if true;
      // WARNING: Publicly writable for prototyping the admin panel.
      allow write: if true;

      match /rooms/{roomId} {
        // Publicly readable.
        allow read: if true;
        // WARNING: Publicly writable for prototyping the admin panel.
        allow write: if true;
      }
    }
  }
}
