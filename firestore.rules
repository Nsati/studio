
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User Profile Rules
    match /users/{userId} {
      // Allow user to read and write their own profile
      allow get, create, update: if request.auth != null && request.auth.uid == userId;
      
      // Admin has full access
      allow read, write: if isAdmin();

      // Booking Rules (Nested under user)
      match /bookings/{bookingId} {
        // Anyone can create and read their own bookings
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Admin has full access
        allow read, write: if isAdmin();
      }
    }

    // Global Bookings Read for Admin (Collection Group)
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    // Hotel & Room Rules
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Allow any authenticated user to update inventory (essential for booking transaction)
          allow update: if request.auth != null;
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    // Other Collections
    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
