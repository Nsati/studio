
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin(userId) {
      return isSignedIn() && getUserData(userId).role == 'admin';
    }

    //----------------------------------------------------------------------
    // Collection Rules
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Admins can read/write any user profile.
      // Users can only read/write their own profile.
      allow read, write: if isAdmin(request.auth.uid) || isOwner(userId);

      match /bookings/{bookingId} {
        // A user can only manage their own bookings.
        // Admins can read any booking.
        allow read: if isAdmin(request.auth.uid) || isOwner(userId);
        allow write: if isOwner(userId); // Prevent admin from accidentally editing user bookings for now
      }
    }
    
    match /bookings/{bookingId} {
      allow read, write: if isAdmin(request.auth.uid);
    }

    match /cities/{cityId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);

      match /rooms/{roomId} {
        allow read: if true;
        allow write: if isAdmin(request.auth.uid);
      }
    }
  }
}
