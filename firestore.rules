rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL HELPERS (MUST BE SYNCHRONOUS) ---
    // collectionGroup queries require synchronous authorization.
    // Database lookups (get() calls) are NOT supported during the authorization phase of a query.
    function isAuthenticated() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. COLLECTION GROUP RULES (TOP LEVEL REQUIRED) ---
    // Recursive wildcard {path=**} is mandatory for collectionGroup('bookings') to match correctly.
    match /{path=**}/bookings/{bookingId} {
      
      // Admin can list all bookings globally.
      // Normal users can list ONLY if the query includes a filter: .where('userId', '==', uid)
      allow list: if isMasterAdmin() || (
        isAuthenticated() && 
        (resource == null || resource.data.userId == request.auth.uid)
      );

      // Single document access (get)
      allow get: if isMasterAdmin() || (
        isAuthenticated() && (
          (resource == null) || 
          (resource.data.userId == request.auth.uid)
        )
      );

      // Write operations
      allow write: if isMasterAdmin() || (
        isAuthenticated() && (
          (resource == null) || 
          (resource.data.userId == request.auth.uid) ||
          (request.resource != null && request.resource.data.userId == request.auth.uid)
        )
      );
    }

    // --- 3. STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isMasterAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId || isMasterAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if isAuthenticated(); 
        allow write: if isMasterAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin(); }
    
    // Catch-all safety for admin
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}