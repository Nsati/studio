
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role from the user's profile
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read their own profile, admins can read any.
    // Users can create their own profile.
    // Users can update their own profile, admins can update any.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
    }

    // Bookings can be created, read, and updated by the user who owns them.
    // Admins can read any booking.
    match /users/{userId}/bookings/{bookingId} {
      allow read, update, create: if request.auth.uid == userId || isAdmin();
    }
    
    // Hotels, Rooms, Cities, Tour Packages, Promotions, and Reviews should be publicly readable.
    // Write operations should be restricted to admins.
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hotels/{hotelId}/rooms/{roomId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /hotels/{hotelId}/reviews/{reviewId} {
      allow read: if true;
      // Allow any authenticated user to create a review.
      allow create: if request.auth != null;
      // Only admins can update/delete reviews.
      allow update, delete: if isAdmin();
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
