
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for clarity and reuse
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User Profile & Bookings Rules
    // This allows both regular users and anonymous guests to manage their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      
      match /bookings/{bookingId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Global Bookings Read for Admin (Collection Group Query support)
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    // Hotel & Room Rules
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Crucial for booking: Allow any authenticated user to decrement room count
          allow update: if isAuthenticated();
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if isAuthenticated();
          allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
        }
    }

    // Other Content Collections
    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
