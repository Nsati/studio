rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPERS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // MASTER ADMIN BYPASS (Immediate authorization for the owner)
    function isMasterAdmin() {
      return isAuthenticated() && request.auth.token.email == 'mistrikumar42@gmail.com';
    }

    // General Admin Check (Registered admins in the database)
    function isAdmin() {
      return isMasterAdmin() || (isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTION GROUP RULES (MUST BE AT TOP LEVEL) ---
    
    match /{path=**}/bookings/{bookingId} {
      // 1. Master Admin and registered Admins can list and read ALL bookings across all paths.
      // 2. Normal users can only list/read their own bookings (requires where('userId', '==', uid) in query).
      allow read, list: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Allow creation if the userId in the data matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow updates/deletes for admins or owners
      allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    // --- STANDARD COLLECTION RULES ---

    // User Profiles
    match /users/{userId} {
      allow read, write: if isMasterAdmin() || isOwner(userId) || isAdmin();
      allow list: if isMasterAdmin() || isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if isMasterAdmin() || isOwner(userId) || isAdmin();
      }
    }

    // Hotels & Rooms (Public Read, Admin Write)
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin() || isAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        // Authenticated users must be able to update availability during a booking transaction
        allow update: if isAuthenticated() || isMasterAdmin() || isAdmin();
        allow write: if isMasterAdmin() || isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    // Generic rules for other collections
    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
  }
}