
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // Check if the user is authenticated and has the 'admin' role in their user profile.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read/update their own profile. Admins can read any profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // Cities are publicly readable. Only admins can modify them.
    match /cities/{cityId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Hotels and Rooms are publicly readable. Only admins can modify them.
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hotels/{hotelId}/rooms/{roomId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Users can create, read, update, and delete their own bookings.
    // Admins can read any booking for management purposes.
    match /users/{userId}/bookings/{bookingId} {
      allow create: if request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth.uid == userId && resource.data.userId == request.auth.uid;
      allow read: if isAdmin();
    }
    
    // Collection group query for admin booking list.
    // Use `list` to cover the collection group query.
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }
  }
}
