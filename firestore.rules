rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPERS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // MASTER ADMIN BYPASS (Bulletproof check for mistrikumar42@gmail.com)
    function isMasterAdmin() {
      return isAuthenticated() && request.auth.token.email == 'mistrikumar42@gmail.com';
    }

    // General Admin Check
    function isAdmin() {
      return isMasterAdmin() || (isAuthenticated() && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTION GROUP RULES ---
    // Critical for collectionGroup('bookings') queries in Admin Dashboard.
    // This MUST stay at the top-level match.
    match /{path=**}/bookings/{bookingId} {
      // 1. Admins can list and read everything.
      // 2. Owners can list/read only their own.
      allow read, list: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Allow creation if the userId in the data matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow updates/deletes for admins or owners
      allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    // --- STANDARD COLLECTION RULES ---

    // User Profiles
    match /users/{userId} {
      allow read, write: if isMasterAdmin() || isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // Nested catch-all for any other user-related data
      match /{allSubcollections=**} {
        allow read, write: if isMasterAdmin() || isOwner(userId) || isAdmin();
      }
    }

    // Hotels & Rooms (Public Read, Admin Write)
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        // Authenticated users must be able to update availability during a booking transaction
        allow update: if isAuthenticated() || isAdmin();
        allow write: if isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    // Generic rules for other collections
    match /cities/{cityId} { allow read: if true; allow write: if isAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isAdmin(); }
  }
}