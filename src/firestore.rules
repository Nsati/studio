
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This function depends on the simple, non-recursive 'allow get' rule below.
      // It allows this function to securely read the user's role document.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // A user can get their OWN document. This is non-recursive and makes isAdmin() work.
      allow get: if request.auth.uid == userId;

      // A user can create their own user document during signup.
      allow create: if request.auth.uid == userId;
      
      // A user can update their OWN document, but CANNOT change their role.
      allow update: if request.auth.uid == userId 
                     && request.resource.data.role == resource.data.role;

      // Admins have broader permissions on user documents.
      allow get, list, update, delete: if isAdmin();
      
      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId || isAdmin();
        
        // A user can create their own booking, but it must be in a PENDING state.
        // This is required for the client-side pre-payment step.
        allow create: if request.auth.uid == userId && request.resource.data.status == 'PENDING';
        
        // Users can no longer update bookings directly (confirm/cancel).
        // This must be done via server actions or webhooks using the Admin SDK.
        // Admins can still update bookings.
        allow update, delete: if isAdmin();
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Room documents can only be written by an Admin.
          // Inventory updates for bookings/cancellations are now handled by the
          // Admin SDK on the server, which bypasses these rules.
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /confirmedBookings/{bookingId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
    }
  }
}
