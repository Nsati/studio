
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This function securely reads the user's role document.
      // The get() call bypasses other security rules, so it doesn't need a separate allow rule.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // --- Rules for Normal Users on their OWN data ---
      // A user can get their own document.
      allow get: if request.auth.uid == userId;
      // A user can create their own user document during signup.
      allow create: if request.auth.uid == userId;
      // A user can update their own document, but CANNOT change their role.
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
      
      // --- Blanket Admin Override ---
      // An admin can read or write any user document. This covers get, list, create, update, delete.
      allow read, write: if isAdmin();

      // --- Bookings Subcollection Rules ---
      match /bookings/{bookingId} {
        // A user can read their own bookings.
        allow read: if request.auth.uid == userId;
        
        // A user can create their own booking, but it must be in a PENDING state.
        allow create: if request.auth.uid == userId && request.resource.data.status == 'PENDING';
        
        // An admin can read or write ANY booking document.
        allow read, write: if isAdmin();
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Room documents can only be written by an Admin.
          // Inventory updates for bookings/cancellations are now handled by the
          // Admin SDK on the server, which bypasses these rules.
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /confirmedBookings/{bookingId} {
        allow read: if true;
        // Writes should only happen from the server (webhook) via Admin SDK, which bypasses rules.
        // Disallow all client-side writes.
        allow write: if false;
    }
  }
}
