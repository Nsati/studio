
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This get() is allowed by the "allow get" rule in the /users/{userId} match below.
      // That rule is non-recursive, which is critical for this function to work.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role);

      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId || isAdmin();
        
        // Allow user to create their own PENDING booking
        allow create: if request.auth.uid == userId && request.resource.data.status == 'PENDING';

        // Allow user to update their own booking from PENDING to CONFIRMED
        allow update: if request.auth.uid == userId
                      && resource.data.status == 'PENDING'
                      && request.resource.data.status == 'CONFIRMED'
                      && request.resource.data.razorpayPaymentId != null
                      && request.resource.data.keys().removeAll(['userId', 'hotelId', 'roomId', 'roomType', 'guests', 'totalPrice', 'customerName', 'customerEmail', 'checkIn', 'checkOut', 'createdAt']).size() == 0;
        
        // Allow admin to update any booking
        allow update: if isAdmin();
        
        // Allow user or admin to cancel their own booking.
        allow update: if (request.auth.uid == userId || isAdmin())
                      && request.resource.data.status == 'CANCELLED';
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow create, delete: if isAdmin();
          
          allow update: if isAdmin() || 
                         (request.auth != null &&
                          request.resource.data.availableRooms != resource.data.availableRooms &&
                          request.resource.data.keys().removeAll(['availableRooms']).size() == 0
                         );
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
