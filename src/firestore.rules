
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This get() is allowed by the "allow get" rule in the /users/{userId} match below.
      // That rule is non-recursive, which is critical for this function to work.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // CRITICAL: This rule specifically allows a user to read THEIR OWN document.
      // It does NOT call isAdmin(), which prevents rule evaluation recursion.
      // This is the rule that allows the get() call inside the isAdmin() function to succeed.
      allow get: if request.auth.uid == userId;

      // Allow admins to perform broad list/update operations.
      // Allow users to create/update their own profiles.
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role);

      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId || isAdmin();

        // A user can create their own booking, but it must be in a PENDING state.
        allow create: if request.auth.uid == userId && request.resource.data.status == 'PENDING';
        
        // Update rules are more specific.
        allow update: if isAdmin() || (request.auth.uid == userId && (
            // User can confirm their OWN pending booking.
            // This is the critical rule for the client-side payment confirmation transaction.
            ( resource.data.status == 'PENDING'
              && request.resource.data.status == 'CONFIRMED'
              // We use diff() to ensure ONLY 'status' and 'razorpayPaymentId' were changed.
              // This is robust and prevents accidental data corruption.
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'razorpayPaymentId'])
            ) ||
            // User can cancel their OWN confirmed booking.
            ( resource.data.status == 'CONFIRMED'
              && request.resource.data.status == 'CANCELLED'
              // Ensure only the 'status' field is being changed.
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
            )
        ));
      }
    }

    // This global rule allows admins to perform `list` operations (collection group queries)
    // across all `bookings` subcollections.
    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow create, delete: if isAdmin();
          
          // Allow admins to update anything.
          // Allow any authenticated user (for booking/cancelling) to update ONLY the 'availableRooms' field.
          // This rule uses request.writeFields, which is a simpler and more direct way to check update operations.
          allow update: if isAdmin() || 
                         (request.auth != null &&
                          request.writeFields.size() == 1 &&
                          request.writeFields[0] == 'availableRooms'
                         );
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Temporary public collection for success page
    match /confirmedBookings/{bookingId} {
        allow read: if true;
        // Allow any authenticated user to create their own booking summary during checkout.
        allow create: if request.auth != null;
        allow update, delete: if false; // Prevent modification after creation
    }
  }
}

    