
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can get any user document. Users can only get their own.
      allow get: if request.auth.uid == userId || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      
      // A new user can create their own user document.
      allow create: if request.auth.uid == userId;

      // An admin can update any field on any user.
      // A regular user can only update their own document, and they are NOT allowed to change their 'role'.
      allow update: if isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role);

      match /bookings/{bookingId} {
        // User can read/write their own bookings. Admins can read/write any booking.
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Temporary public collection for success page
    match /confirmedBookings/{bookingId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
