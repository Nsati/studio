rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL HELPERS (MUST BE SYNCHRONOUS) ---
    // Pure token-based checks are required for collectionGroup queries.
    // Avoid get() or exists() inside these if used for global list authorization.
    function isAuthenticated() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. COLLECTION GROUP RULES (MUST BE AT TOP) ---
    // This allows collectionGroup('bookings') queries to be authorized globally.
    // The recursive wildcard {path=**} is critical here.
    match /{path=**}/bookings/{bookingId} {
      allow read, write: if isMasterAdmin() || (
        isAuthenticated() && (
          (resource == null) || 
          (resource.data.userId == request.auth.uid) || 
          (request.resource != null && request.resource.data.userId == request.auth.uid)
        )
      );
    }

    // --- 3. STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isMasterAdmin();
      allow list: if isMasterAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId || isMasterAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if isAuthenticated(); 
        allow write: if isMasterAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin(); }
    
    // Catch-all safety
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}