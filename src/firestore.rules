
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This get() is allowed by the "isOwner()" check in the /users/{userId} rule below.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }

      // Admins can read/list any user. Users can only read their own profile.
      // The isOwner() part is critical. It allows a user to read their own doc,
      // which in turn allows the get() call inside isAdmin() to succeed without recursion.
      allow get, list: if isOwner() || isAdmin();
      
      // A new user can create their own user document.
      allow create: if isOwner();

      // An admin can update any field on any user.
      // A regular user can only update their own document, and they are NOT allowed to change their 'role'.
      allow update: if isAdmin() || (isOwner() && request.resource.data.role == resource.data.role);

      match /bookings/{bookingId} {
        // User can read/write their own bookings. Admins can read/write any booking.
        allow read, write: if isOwner() || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          allow create, delete: if isAdmin();
          
          // Allow admins to update anything.
          // Allow any authenticated user to change the availableRooms count, but no other fields.
          // This is a more explicit rule that avoids using .diff() in case of subtle issues with it.
          allow update: if isAdmin() || 
                         (request.auth != null &&
                          request.resource.data.price == resource.data.price &&
                          request.resource.data.capacity == resource.data.capacity &&
                          request.resource.data.hotelId == resource.data.hotelId &&
                          request.resource.data.id == resource.data.id &&
                          request.resource.data.totalRooms == resource.data.totalRooms &&
                          request.resource.data.type == resource.data.type);
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Temporary public collection for success page
    match /confirmedBookings/{bookingId} {
        allow read: if true;
        // Allow any authenticated user to create their own booking summary during checkout.
        allow create: if request.auth != null;
        allow update, delete: if false; // Prevent modification after creation
    }
  }
}
