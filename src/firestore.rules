rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL SUPERUSER HELPERS (100% SYNCHRONOUS) ---
    // Zero database lookups for maximum speed and collectionGroup compatibility.
    function isSuperuser() {
      return request.auth != null && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. UNIVERSAL COLLECTION GROUP BYPASS (GOD MODE) ---
    // This MUST stay outside specific resource paths to authorize global queries like collectionGroup('bookings').
    match /{path=**}/bookings/{bookingId} {
      
      // Allow LIST if superuser (synchronous) or if the query filters by owner UID.
      allow list: if isSuperuser() || (
        request.auth != null && (resource == null || resource.data.userId == request.auth.uid)
      );

      // Allow GET/WRITE if superuser or owner.
      allow get, write: if isSuperuser() || (
        request.auth != null && (
          (resource == null) || 
          (resource.data.userId == request.auth.uid) ||
          (request.resource != null && request.resource.data.userId == request.auth.uid)
        )
      );
    }

    // --- 3. STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if isSuperuser() || request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write: if isSuperuser() || request.auth.uid == userId;
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isSuperuser();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if request.auth != null; 
        allow write: if isSuperuser();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isSuperuser() || (request.auth != null && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isSuperuser(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isSuperuser(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isSuperuser(); }
    
    // Catch-all safety for admin
    match /{allPaths=**} {
      allow read, write: if isSuperuser();
    }
  }
}