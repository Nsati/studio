rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPERS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // MASTER ADMIN BYPASS: Synchronous token check
    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    function isAdmin() {
      return isMasterAdmin() || (isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // --- COLLECTION GROUP RULES ---
    match /{path=**}/bookings/{bookingId} {
      allow read, write: if isMasterAdmin();
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isMasterAdmin() || isAdmin();
      allow list: if isMasterAdmin() || isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId || isMasterAdmin() || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin() || isAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        allow update: if isAuthenticated(); 
        allow write: if isMasterAdmin() || isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}