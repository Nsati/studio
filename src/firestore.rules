
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This function securely reads the user's role document.
      // The get() call bypasses other security rules, so it doesn't need a separate allow rule.
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Rule combination:
      // A user can get their own document. An admin can get any.
      // An admin can list all users.
      // A user can create their own document (signup). An admin can also create user docs.
      // A user can update their own doc (but not their role). An admin can update any doc.
      // Only an admin can delete a user doc.
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();

      match /bookings/{bookingId} {
        allow read: if request.auth.uid == userId || isAdmin();
        
        // A user can create their own booking in a PENDING state.
        // Admins are also allowed to do this.
        allow create: if (request.auth.uid == userId && request.resource.data.status == 'PENDING') || isAdmin();
        
        // Only the server (via Admin SDK) or an Admin should confirm/cancel bookings.
        allow update, delete: if isAdmin();
      }
    }

    match /{path=**}/bookings/{bookingId} {
        allow list: if isAdmin();
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();

        match /rooms/{roomId} {
          allow read: if true;
          // Room documents can only be written by an Admin.
          // Inventory updates for bookings/cancellations are now handled by the
          // Admin SDK on the server, which bypasses these rules.
          allow write: if isAdmin();
        }
        
        match /reviews/{reviewId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        }
    }

    match /cities/{cityId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /tourPackages/{packageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /confirmedBookings/{bookingId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
    }
  }
}
