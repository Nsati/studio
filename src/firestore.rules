rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPERS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // MASTER ADMIN BYPASS (Immediate authorization for the owner)
    // Using synchronous token checks to avoid permission-denied errors in collectionGroup queries.
    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // General Admin Check (for other admin users defined in the database)
    function isAdmin() {
      return isMasterAdmin() || (isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTION GROUP RULES ---
    // MUST BE DEFINED TO ALLOW collectionGroup('bookings') QUERIES
    match /{path=**}/bookings/{bookingId} {
      // Allow Master Admin unrestricted access (synchronous check)
      allow read, write: if isMasterAdmin();
      
      // Standard user access
      allow read, list: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- STANDARD COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isMasterAdmin() || isAdmin();
      allow list: if isMasterAdmin() || isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId) || isMasterAdmin() || isAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin() || isAdmin();

      match /rooms/{roomId} {
        allow read: if true;
        // Allow updates for both admins and authenticated users (for room availability during booking)
        allow update: if isAuthenticated() || isMasterAdmin() || isAdmin(); 
        allow write: if isMasterAdmin() || isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isMasterAdmin() || isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin() || isAdmin(); }
    
    // Global catch-all for Master Admin
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}