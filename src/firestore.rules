rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. GLOBAL HELPERS (100% SYNCHRONOUS) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'mistrikumar42@gmail.com' || 
        request.auth.uid == 'kk7Tsg8Ag3g1YMMR79rgrHUxq2W2'
      );
    }

    // --- 2. UNIVERSAL COLLECTION GROUP BYPASS ---
    match /{path=**}/bookings/{bookingId} {
      allow list: if isMasterAdmin() || (
        isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid)
      );
      allow get, write: if isMasterAdmin() || (
        isAuthenticated() && (
          (resource == null) || 
          (resource.data.userId == request.auth.uid) ||
          (request.resource != null && request.resource.data.userId == request.auth.uid)
        )
      );
    }

    // --- 3. STANDARD COLLECTION RULES ---
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isMasterAdmin();
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId || isMasterAdmin();
      }
    }

    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isMasterAdmin();
      match /rooms/{roomId} {
        allow read: if true;
        allow update: if isAuthenticated(); 
        allow write: if isMasterAdmin();
      }
    }

    match /cities/{cityId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /tourPackages/{packageId} { allow read: if true; allow write: if isMasterAdmin(); }
    match /promotions/{promoId} { allow read: if true; allow write: if isMasterAdmin(); }
    
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}