
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile in the Uttarakhand Getaways application.",
      "properties": {
        "uid": { "type": "string" },
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "mobile": { "type": "string" },
        "role": { "type": "string", "enum": ["user", "admin"] },
        "status": { "type": "string", "enum": ["pending", "active", "suspended"] }
      },
      "required": ["uid", "displayName", "email", "role", "status"]
    },
    "Hotel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Hotel",
      "type": "object",
      "description": "Smart Hotel entity with Mountain Safety and Local Intel.",
      "properties": {
        "name": { "type": "string" },
        "city": { "type": "string" },
        "description": { "type": "string" },
        "address": { "type": "string" },
        "images": { "type": "array", "items": { "type": "string" } },
        "amenities": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "minPrice": { "type": "number" },
        "discount": { "type": "number" },
        "mountainSafetyScore": { "type": "number", "description": "Score from 0-100" },
        "landslideRisk": { "type": "string", "enum": ["Low", "Medium", "High"] },
        "roadCondition": { "type": "string" },
        "networkJio": { "type": "boolean" },
        "networkAirtel": { "type": "boolean" },
        "networkBsnl": { "type": "boolean" },
        "isSnowFriendly": { "type": "boolean" },
        "isElderlySafe": { "type": "boolean" },
        "hasPowerBackup": { "type": "boolean" },
        "nearestAtmKm": { "type": "number" },
        "cabFareToCenter": { "type": "number" },
        "balconyWorthIt": { "type": "boolean" }
      },
      "required": ["name", "city", "rating", "mountainSafetyScore"]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "hotelId": { "type": "string" },
        "hotelName": { "type": "string" },
        "status": { "type": "string", "enum": ["CONFIRMED", "CANCELLED", "PENDING"] },
        "weatherRiskAccepted": { "type": "boolean" },
        "splitPayment": { "type": "boolean" },
        "earlyCheckInRequested": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "entityName": "UserProfile", "schema": { "$ref": "#/backend/entities/UserProfile" } },
        "subcollections": [
          {
            "path": "/users/{userId}/bookings/{bookingId}",
            "definition": { "entityName": "Booking", "schema": { "$ref": "#/backend/entities/Booking" } }
          }
        ]
      },
      {
        "path": "/hotels/{hotelId}",
        "definition": { "entityName": "Hotel", "schema": { "$ref": "#/backend/entities/Hotel" } }
      }
    ]
  }
}
